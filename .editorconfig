root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

[*.{kt,kts}]
indent_style = space
indent_size = 4
max_line_length = 120
ij_kotlin_allow_trailing_comma = true
ij_kotlin_allow_trailing_comma_on_call_site = true

[*.{java}]
indent_style = space
indent_size = 4
max_line_length = 120

[*.{xml}]
indent_style = space
indent_size = 4

[*.{json,yml,yaml}]
indent_style = space
indent_size = 2

[*.{md}]
trim_trailing_whitespace = false

[*.gradle*]
indent_style = space
indent_size = 4

[*.properties]
indent_style = space
indent_size = 2