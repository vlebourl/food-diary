<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme -->
    <style name="Theme.FoodDiary" parent="Theme.Material3.DayNight">
        <!-- Customize your theme here -->
        <item name="colorPrimary">@color/green_500</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorPrimaryContainer">@color/green_100</item>
        <item name="colorOnPrimaryContainer">@color/green_900</item>

        <item name="colorSecondary">@color/blue_500</item>
        <item name="colorOnSecondary">@color/white</item>
        <item name="colorSecondaryContainer">@color/blue_100</item>
        <item name="colorOnSecondaryContainer">@color/blue_900</item>

        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <item name="android:navigationBarColor">?attr/colorSurface</item>
    </style>

    <!-- Splash theme -->
    <style name="Theme.FoodDiary.Splash" parent="Theme.FoodDiary">
        <item name="android:windowBackground">@drawable/splash_background</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
    </style>
</resources>