<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_timeline">

    <fragment
        android:id="@+id/navigation_timeline"
        android:name="com.fooddiary.presentation.ui.timeline.TimelineFragment"
        android:label="@string/title_timeline"
        tools:layout="@layout/fragment_timeline" />

    <fragment
        android:id="@+id/navigation_entry"
        android:name="com.fooddiary.presentation.ui.entry.EntryFragment"
        android:label="@string/title_entry"
        tools:layout="@layout/fragment_entry">

        <action
            android:id="@+id/action_entry_to_food_entry"
            app:destination="@id/navigation_food_entry" />

        <action
            android:id="@+id/action_entry_to_symptom_entry"
            app:destination="@id/navigation_symptom_entry" />

        <action
            android:id="@+id/action_entry_to_beverage_entry"
            app:destination="@id/navigation_beverage_entry" />

    </fragment>

    <fragment
        android:id="@+id/navigation_food_entry"
        android:name="com.fooddiary.presentation.ui.entry.FoodEntryFragment"
        android:label="@string/title_food_entry"
        tools:layout="@layout/fragment_food_entry" />

    <fragment
        android:id="@+id/navigation_symptom_entry"
        android:name="com.fooddiary.presentation.ui.entry.SymptomEntryFragment"
        android:label="@string/title_symptom_entry"
        tools:layout="@layout/fragment_symptom_entry" />

    <fragment
        android:id="@+id/navigation_beverage_entry"
        android:name="com.fooddiary.presentation.ui.entry.BeverageEntryFragment"
        android:label="@string/title_beverage_entry"
        tools:layout="@layout/fragment_beverage_entry" />

    <fragment
        android:id="@+id/navigation_analysis"
        android:name="com.fooddiary.presentation.ui.analysis.AnalyticsFragment"
        android:label="@string/title_analysis"
        tools:layout="@layout/fragment_analytics" />

    <fragment
        android:id="@+id/navigation_reports"
        android:name="com.fooddiary.presentation.ui.reports.ReportsFragment"
        android:label="@string/title_reports"
        tools:layout="@layout/fragment_reports" />

    <fragment
        android:id="@+id/navigation_settings"
        android:name="com.fooddiary.presentation.ui.settings.SettingsFragment"
        android:label="@string/title_settings"
        tools:layout="@layout/fragment_settings" />

</navigation>